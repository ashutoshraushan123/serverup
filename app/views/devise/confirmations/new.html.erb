<%= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), 
:html => { :method => :post, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <legend>Resend confirmation instructions</legend>

  <div class="form-inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Resend confirmation instructions", :class => 'btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
